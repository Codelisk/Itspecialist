<UserControl x:Class="ModuleAccounts.Views.Uno.Views.TalentProfileSetup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:ModuleAccounts.Views.Uno.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <StackPanel>
        <TextBox Text="{Binding TalentProfile.Title}" />
        <TextBox Text="{Binding TalentProfile.FirstName}" />
        <TextBox Text="{Binding TalentProfile.LastName}" />
        <TextBox Text="{Binding TalentCompensation.Wage}" />

        <Button Command="{Binding SaveTalentProfileCommand}"
                Content="Save" />
    </StackPanel>
</UserControl>
